<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.itesm.dognoscis.QuizActivity">

    <ImageView
    android:id="@+id/dogImageView"
    android:layout_width="184dp"
    android:layout_height="355dp"
    android:layout_marginStart="24dp"
    android:layout_marginTop="84dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@android:drawable/stat_sys_download_done" />

    <Button
        android:id="@+id/Husky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:onClick="checkChoice"
        android:text="Husky"
        app:layout_constraintStart_toEndOf="@+id/dogImageView"
        app:layout_constraintTop_toBottomOf="@+id/GranDanes" />

    <Button
        android:id="@+id/Chihuahua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="241dp"
        android:layout_marginTop="16dp"
        android:onClick="checkChoice"
        android:text="chihuahua"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SanBernardo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="7dp"
        android:onClick="checkChoice"
        android:text="san bernardo"
        app:layout_constraintStart_toEndOf="@+id/dogImageView"
        app:layout_constraintTop_toBottomOf="@+id/PastorAleman" />

    <Button
        android:id="@+id/Dalmata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="7dp"
        android:onClick="checkChoice"
        android:text="dalmata"
        app:layout_constraintStart_toEndOf="@+id/dogImageView"
        app:layout_constraintTop_toBottomOf="@+id/Chihuahua" />

    <Button
        android:id="@+id/GranDanes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="8dp"
        android:onClick="checkChoice"
        android:text="gran danes"
        app:layout_constraintStart_toEndOf="@+id/dogImageView"
        app:layout_constraintTop_toBottomOf="@+id/Dalmata" />

    <Button
        android:id="@+id/Yorkshire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="8dp"
        android:onClick="checkChoice"
        android:text="yorkshire"
        app:layout_constraintStart_toEndOf="@+id/dogImageView"
        app:layout_constraintTop_toBottomOf="@+id/ShihTzu" />

    <Button
        android:id="@+id/ShihTzu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="7dp"
        android:onClick="checkChoice"
        android:text="shih tzu"
        app:layout_constraintStart_toEndOf="@+id/dogImageView"
        app:layout_constraintTop_toBottomOf="@+id/SanBernardo" />

    <Button
        android:id="@+id/PastorAleman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="9dp"
        android:onClick="checkChoice"
        android:text="pastor aleman"
        app:layout_constraintStart_toEndOf="@+id/dogImageView"
        app:layout_constraintTop_toBottomOf="@+id/Husky" />
</android.support.constraint.ConstraintLayout>
